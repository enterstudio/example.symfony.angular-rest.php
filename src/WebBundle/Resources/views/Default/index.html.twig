{% extends 'DdrSymfonyAngularRestExampleWebBundle::base.html.twig' %}

{% block content %}
    <div class="page-header">
        {% if is_granted('ROLE_USER') %}
            <div class="pull-right">
                <a href="{{ path('ddr_symfony_angular_rest_example_web_newsentry_edit', {'id':'create'}) }}" class="btn btn-lg btn-default">
                    <span class="fa fa-plus"></span>
                </a>
            </div>
        {% endif %}
        <h1>Welcome</h1>
    </div>

    {% for newsEntry in newsEntries %}
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="pull-right">
                    {{ newsEntry.date|date }}
                </div>
                <h2 class="panel-title"><a
                            href="{{ path('ddr_symfony_angular_rest_example_web_newsentry_detail', {'id':newsEntry.id}) }}">{{ newsEntry.title }}</a></h2>
            </div>
            <div class="panel-body">
                {{ newsEntry.content }}
                <p class="text-muted margin-bottom-none">
                    <small>by {{ newsEntry.author.username }}</small>
                </p>
            </div>
            <div class="panel-footer">
                <span class="fa fa-comments"></span> {{ newsEntry.numComments }} Comments
            </div>
        </div>
    {% endfor %}

{% endblock content %}